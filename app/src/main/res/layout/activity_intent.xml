<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@android:color/background_dark"
    android:layout_height="match_parent"
    tools:context=".intentActivity">

    <Button
        android:id="@+id/btn_call"
        android:layout_width="283dp"
        android:layout_height="55dp"
        android:layout_marginTop="32dp"
        android:text="CALL"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/btn_dial"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btn_dial"
        app:layout_constraintTop_toBottomOf="@+id/btn_dial"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btn_email"
        android:layout_width="283dp"
        android:layout_height="55dp"
        android:layout_marginTop="32dp"
        android:text="EMAIL"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/btn_call"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/btn_call"
        app:layout_constraintTop_toBottomOf="@+id/btn_call"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btn_mpesa"
        android:layout_width="283dp"
        android:layout_height="55dp"
        android:layout_marginTop="32dp"
        android:text="MPESA"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/btn_email"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/btn_email"
        app:layout_constraintTop_toBottomOf="@+id/btn_email"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btn_share"
        android:layout_width="283dp"
        android:layout_height="55dp"
        android:layout_marginTop="32dp"
        android:text="SHARE"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/btn_sms"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/btn_sms"
        app:layout_constraintTop_toBottomOf="@+id/btn_sms"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btn_camera"
        android:layout_width="283dp"
        android:layout_height="55dp"
        android:layout_marginTop="32dp"
        android:text="CAMERA"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/btn_share"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btn_share"
        app:layout_constraintTop_toBottomOf="@+id/btn_share"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btn_dial"
        android:layout_width="283dp"
        android:layout_height="55dp"
        android:text="DIAL"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.375"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.079" />

    <Button
        android:id="@+id/btn_sms"
        android:layout_width="283dp"
        android:layout_height="55dp"
        android:layout_marginTop="32dp"
        android:text="SMS"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/btn_mpesa"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/btn_mpesa"
        app:layout_constraintTop_toBottomOf="@+id/btn_mpesa"
        app:layout_constraintVertical_bias="0.0" />


</androidx.constraintlayout.widget.ConstraintLayout>